{
  "version": 2,
  "builds": [
    {
      "src": "mall-app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "mall-app/dist/assets/$1"
    },
    {
      "src": "/(.+\\.(?:ico|png|jpg|jpeg|webp|svg|gif|tiff|js|css|woff|woff2)$)",
      "dest": "mall-app/dist/$1"
    },
    {
      "src": "/(.*)",
      "dest": "mall-app/dist/index.html"
    }
  ]
}
