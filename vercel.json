{
  "version": 2,
  "builds": [
    {
      "src": "mall-app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "mall-app/dist",
        "buildCommand": "cd mall-app && npm install && npm run build"
      }
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/assets/$1"
    },
    {
      "src": "/(.+\\.(?:ico|png|jpg|jpeg|webp|svg|gif|tiff|js|css|woff|woff2)$)",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
